	width: 8.333333333%
	
.offset-1
	margin-left: 8.333333333%
	
.content .cols.col-2
	width: 16.666666666%
	
.offset-2
	margin-left: 16.666666666%
	
.content .cols.col-3
	width: 25%
	
.offset-3
	margin-left: 25%
	
.content .cols.col-4
	width: 33.333333333%
	
.offset-4
	margin-left: 33.333333333%
		
.content .cols.col-5
	width: 41.666666667%
	
.offset-5
	margin-left: 41.666666667%
	
.content .cols.col-6
	width: 50%
	
.offset-6
	margin-left: 50%
	
.content .cols.col-7
	width: 58.333333333%
	
.offset-7
	margin-left: 58.333333333%
	
.content .cols.col-8
	width: 66.666666667%
	
.offset-8
