	width: 100%

.wrapper
	min-width: 500px
	background: #d2d2d2 url('street.jpg')
	color: #fff
	background-size: cover
	-webkit-background-size: cover
	-moz-background-size: cover
	height: 600px
	position: relative
	z-index: 1
.bg
	position: absolute
	width: 100%
	height: 100%
	background: #2E6869
	opacity: 0.55
	content: ''
	z-index: 2

.wrapper .content
	position: relative
	z-index: 10

	
.header-nav
	padding: 27px 0
	height: 80px
	color: #fff
	border-bottom: 1px solid #9E9E9E
	position: relative
	.logo-block
		float: left
		display: inline-block
	.logo
		text-transform: uppercase
		font-weight: 600
		letter-spacing: 1px
		float: left
		text-shadow: 0.1px 0.1px 0.2px black, 0.2px 0.3px 0.7px black
		border-right: 1px solid #9E9E9E
		padding-right: 25px
		line-height: 0.8
	p
		float: left
		line-height: 18px
		margin-left: 17px
		font-size: 12px
		letter-spacing: 0.1px
		font-weight: 700
		color: lightgrey
	.links
		float: right
		padding-left: 25px
		a
			&:not(:first-child)		
				margin-left: 5%
			display: inline
			text-transform: uppercase
			font-weight: 700
			font-size: 12px
			color: #869A9E
			&:hover
				color: #DAE6E6
			&:last-child
				padding: 5px 25px
				font-size: 11px
				border-radius: 1px
				color: #DAE6E6		

.logo h1
	font-size: 23px

	
.phone-icon
	background:url('phone-icon.png')
	background-size: cover
	float: left
	width: 20px
	height: 20px
	border: none
	cursor: pointer
	margin: -1px 5px 0px 0px

.active
	color: #DAE6E6 !important		

.site-header
	margin-top: 180px
	position: relative
	
.site-header 
	h1
		font-weight: 500
		margin-bottom: 15px
	p 
		font-weight: 300
		max-width: 600px
		color: #C7DEDE
		font-size: 17px
		margin-bottom: 15px
.center
	text-align: center
	
.intro-text
	max-width: 400px
	margin: 0 auto
	font-weight: 400
	margin-bottom: 50px

.main-content
	margin-top: 90px
	
	p 
		color: #A9B9B9
		font-size: 14px
		font-weight: 400
	
	h1,h2,h3,h4,h5,h6
		color: #426E6E
		margin-bottom: 15px
		font-weight: 400
		text-align: center
	h1
		font-weight: 300
		
	.features
		margin-bottom: 40px

@media screen and (max-width: 970px)
	.header-nav
		height: 100px
		text-align: center
		.logo-block
			float: none
			margin-bottom: 10px
		.links
			float: none
			padding-left: 0px
			width: 90%
			margin: 0 auto
			
@media screen and (max-width: 680px)
	.header-nav
		.links
			a
				font-size: 11px
